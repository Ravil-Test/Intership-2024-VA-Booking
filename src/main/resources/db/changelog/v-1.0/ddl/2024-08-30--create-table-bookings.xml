<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2024-08-27--create-table-bookings" author="Ravil_Nurullin">

        <preConditions>
            <not>
                <tableExists tableName="booking"/>
            </not>
        </preConditions>

        <createTable tableName="booking">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="booking_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="booking_start_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="booking_end_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="booking_cancel_date_time" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="booking_cancel_reason" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="is_booked" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

    </changeSet>

    <changeSet id="2024-09-05-add-foreign_key-booking-workplace" author="Ravil_Nurullin">

        <preConditions>
            <tableExists tableName="booking"/>
            <tableExists tableName="workplace"/>
        </preConditions>

        <addColumn tableName="booking">
            <column name="workplace_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_workplace_booking_into_booking_table"
                             references="workplace(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>