<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2024-08-28--create-table-breakage_request" author="Ravil_Nurullin">

        <preConditions>
            <not>
                <tableExists tableName="breakage_request"/>
            </not>
        </preConditions>

        <createTable tableName="breakage_request">
            <column name="id" type="uuid">
                <constraints nullable="true" primaryKey="true"/>
            </column>
            <column name="request_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="is_completed" type="bool" defaultValueBoolean="false"/>
            <column name="is_canceled" type="bool" defaultValueBoolean="false"/>
        </createTable>

    </changeSet>

    <changeSet id="2024-09-05-add-foreign_key-breakage_request-workplace" author="Ravil_Nurullin">

        <preConditions>
            <tableExists tableName="breakage_request"/>
            <tableExists tableName="workplace"/>
        </preConditions>

        <addColumn tableName="breakage_request">
            <column name="workplace_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_workplace_breakage_request_into_breakage_request_table"
                             references="workplace(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>